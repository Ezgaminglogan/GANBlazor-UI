@* Card Footer Component *@
<div class="@Css">
    @ChildContent
</div>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public string? Class { get; set; }

    private string Css =>
        string.Join(" ", new[]
        {
            "px-6 py-4 border-t border-zinc-200 bg-zinc-50",
            Class ?? ""
        }.Where(x => !string.IsNullOrWhiteSpace(x)));
}
